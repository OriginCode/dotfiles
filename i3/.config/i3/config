# Start polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh --forest

# Start compton
exec picom --experimental-backends

# Start geoclue2 agent
exec --no-startup-id /usr/libexec/geoclue-2.0/demos/agent
exec --no-startup-id redshift-gtk

# Start programs
exec dunst
exec fcitx5
