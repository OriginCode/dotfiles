set $ws1 "1:TERM"
set $ws2 "2:IM"
set $ws3 "3:FF"
set $ws4 "4:TB"
set $ws5 "5:VSC"
for_window [class="Alacritty"] move to workspace $ws1
for_window [class="Telegram"] move to workspace $ws2
for_window [class="Firefox"] move to workspace $ws3
for_window [class="Thunderbird"] move to workspace $ws4
for_window [class="Code - OSS"] move to workspace $ws5
exec --no-startup-id alacritty
exec --no-startup-id telegram-desktop
exec --no-startup-id firefox
exec --no-startup-id thunderbird
