bindsym $mod+n exec i3-input -F 'rename workspace to "%s"' -P 'New name: '

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer --card 1 sset 'Master' 5%+ && pkill -SIGRTMIN+11 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer --card 1 sset 'Master' 5%- && pkill -SIGRTMIN+11 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -SIGRTMIN+11 i3blocks

# Borderless
for_window [class=".*"] border pixel 0

# Gaps
# gaps outer 7
# Only enable gaps on a workspace when there is at least one container
# smart_gaps inverse_outer

# Brightness control via light
bindsym XF86MonBrightnessUp exec light -A 5 && pkill -SIGRTMIN+12 i3blocks
bindsym XF86MonBrightnessDown exec light -U 5 && pkill -SIGRTMIN+12 i3blocks

# Screenshots
bindsym --release Print exec scrot '~/Image/scrot_%Y-%m-%d_$wx$h.png'
bindsym --release Ctrl+Print exec scrot '/tmp/scrot_%Y-%m-%d_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'
# bindsym --release $mod+Print exec scrot -ub '~/Image/scrot_%Y-%m-%d_$wx$h.png'
# bindsym --release Ctrl+$mod+Print exec scrot -ub '/tmp/scrot_%Y-%m-%d_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'
# bindsym --release Shift+Print exec scrot -s '~/Image/scrot_%Y-%m-%d_$wx$h.png'
# bindsym --release Ctrl+Shift+Print exec scrot -s '/tmp/scrot_%Y-%m-%d_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'
# bindsym --release Print exec gnome-screenshot
# bindsym --release Ctrl+Print exec gnome-screenshot -c

# Set wallpaper
# exec feh --bg-fill ~/Images/Wallpapers/TrafficLights.png
exec feh --bg-fill ~/Images/Wallpapers/tongtong-wallpaper-april-4k.png
